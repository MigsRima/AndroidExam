<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/galley2"
        >

        <TextView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:fontFamily="@font/font1"
            android:id="@+id/space2"
            android:layout_width="100dp"
            android:layout_marginTop="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="+"
            android:textSize="36sp"
            android:textColor="#752219"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="36sp"
            android:textColor="#752219"
            android:padding="20dp"
            android:text="0"
            android:fontFamily="@font/font1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:gravity="center"/>

        <TextView
            android:textColor="#752219"
            android:id="@+id/text2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@id/space2"
            android:layout_toRightOf="@id/space2"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:padding="20dp"
            android:text="0"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/timeleft"
            android:textColor="#752219"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/text1"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/font1"
            android:textSize="30dp"
            android:text="Time left:"
            />

        <TextView
            android:id="@+id/timeleft2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/text1"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/font1"
            android:text="Score:"
            android:gravity="center"
            android:textColor="#752219"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/countdown_text"
            android:fontFamily="@font/font1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeleft"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="#752219"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/space3"
            android:fontFamily="@font/font1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="#752219"
            android:padding="20dp"
            android:layout_marginLeft="200dp"
            android:layout_below="@+id/timeleft2"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/countdown_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Submit"
            android:fontFamily="@font/font1"
            android:onClick="pass"
            android:enabled="false"
            android:background="#e9d49d"
            android:textColor="#752219"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="380dp" />

        <EditText
            android:fontFamily="@font/font1"
            android:id="@+id/ans"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="380dp"
            android:inputType="number"
            android:textSize="40sp"
            android:textColor="#752219"
            android:layout_toRightOf="@id/countdown_button" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>